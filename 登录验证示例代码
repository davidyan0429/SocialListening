                final timestamp = new Date().format("yyyy-MM-dd'T'HH:mm:ssZ", TimeZone.getTimeZone('Asia/Shanghai'))
                final String SIGN_METHOD = "HmacSHA256"
                final String SIGN_VERSION = '1'
                final String appId = '申请app_id' 
                final String appSecret = '申请appSecret'
                final methodUpper = method.toUpperCase()
                final String reqInfo = [
                        methodUpper,
                        uri,
                        appId,
                        timestamp,
                        SIGN_METHOD,
                        SIGN_VERSION,
                        query ?: ''
                ].join('\n')

                final sign = Base64.encoder.encodeToString(HmacUtils.hmacSha256(appSecret, reqInfo))
                final Map<String, String> headers = [
                        'Content-Type'       : 'application/json',
                        'Accept'             : 'application/json',
                        'Cache-Control'      : 'no-cache',
                        'X-Auth-Signature'   : sign,
                        'X-Auth-Key'         : appId,
                        'X-Auth-Timestamp'   : timestamp,
                        'X-Auth-Sign-Method' : SIGN_METHOD,
                        'X-Auth-Sign-Version': SIGN_VERSION
                ]

                final url = "http://mc.audienx.com/api_v1${uri}${query ? ('?' + query) : ''}"
                final Request.Builder builder = new Request.Builder().url(url)
                headers.each { k, v -> builder.addHeader(k, v) }
                RequestBody requestBody = requestJson ? RequestBody.create(MediaType.parse("application/json; charset=utf-8"), requestJson) : null
                Request request = builder.method(methodUpper, requestBody).build()
                response = client.newCall(request).execute()



